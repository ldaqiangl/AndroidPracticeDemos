<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_settings_checkupgrade"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorGray">

        <TextView
            android:id="@+id/tv_settings_checkupgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="检查新版本"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_settings_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_settings_checkupgrade"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_settings_checkupgrade"
            android:src="@drawable/shape_red_dot"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>